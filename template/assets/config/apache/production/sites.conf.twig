<VirtualHost *:80>

    ServerAdmin local@dockware

    ErrorLog /dev/stderr
    AccessFileName .htaccess

    DocumentRoot {{ apache.docroot }}

    <Directory /var/www/html>
        Options -Indexes
        AllowOverride All
        Require all granted
        CGIPassAuth On
    </Directory>

    <FilesMatch \.php$>
        # 2.4.10+ can proxy to unix socket
        SetHandler "proxy:unix:/var/run/php/{{php.default_version}}-fpm.sock|fcgi://localhost"
    </FilesMatch>

</VirtualHost>